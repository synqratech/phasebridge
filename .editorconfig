# EditorConfig helps maintain consistent coding styles across editors/IDEs
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Python: 4 spaces
[*.py]
indent_size = 4
max_line_length = 100

# Markdown: keep trailing spaces (for line breaks)
[*.md]
trim_trailing_whitespace = false

# YAML/JSON: 2 spaces
[*.{yml,yaml,json}]
indent_size = 2
